pipeline {
    agent any
    tools {
            maven 'Maven 3.1.0'
            jdk 'jdk11'
            }

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven_3_1_0') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven_3_1_0') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven_3_1_0') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}