pipeline {
    agent any
     tools {
        maven 'M3'
      }
       stage ('Initialize') {
                  steps {
                      sh '''
                          echo "PATH = ${PATH}"
                          echo "M2_HOME = ${M2_HOME}"
                      '''
                  }
              }

    stages {
        stage('Build stage') {
            steps {
               echo 'This is a minimal pipeline.'
        }
    }
    }
    post {
    always{
    cleanWs()
    }
    }


    }
