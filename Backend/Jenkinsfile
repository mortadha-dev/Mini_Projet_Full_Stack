pipeline {
    agent any
     tools {
        maven 'M3'
      }

    stages {
     stage ('Initialize') {
                      steps {
                          sh '''
                              echo "PATH = ${PATH}"
                              echo "M2_HOME = ${M2_HOME}"
                          '''
                      }
                  }
        stage('Build stage') {
            steps {
              sh 'mvn -Dmaven.test.failure.ignore=true install'
        }
    }
    }
    post {
    always{
    cleanWs()
    }
    }


    }
